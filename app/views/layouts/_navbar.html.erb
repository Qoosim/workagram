<nav class="row col-12 bg-nav">
    <% if logged_in? %>
    <%= image_tag current_user.photo.url, class: "photo img-rounded float-left" if current_user.photo? %>
    <h4 class="text-muted float-left"> <%= current_name.upcase %> </h4>
    <ul class= "row d-flex align-items-center">        
      <li class= "col-6">
         <h3><%= current_user.following.count%></h2> 
         <p>Following</p>
      </li>
      <li class="col-6">
        <h3><%= current_user.followers.count %></h3>
        <p>Followers</p>
      </li>
    </ul>
    <ul>        
        <li>
        <%= link_to 'HOME', root_path %>
        </li>
        <li>
        <%= link_to 'PROFILE', current_user %>
        </li>
        <li>
        <%= link_to "Log out", logout_path, method: :delete %>
        </li>
    <% else %>
    <ul>
        <li><%= link_to "Log in", login_path %></li>
        <li><%= link_to "Sign up", signup_path %></li>
    <% end %>
    </ul>
</nav>
